{
  "extends": "nx/presets/core.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "cache": true,
      "inputs": [
        "{projectRoot}/Dockerfile",
        "{projectRoot}/package.json",
        "{projectRoot}/files",
        "{projectRoot}/ARCHITECTURES"
      ],
      "dependsOn": ["^build"]
    },
    "lint": {
      "cache": true
    },
    "e2e": {
      "cache": true
    }
  },
  "neverConnectToCloud": true
}
